<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_2"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/choosetxt">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView_anno2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="#FBC02D"
                            android:gravity="center"
                            android:text="2022"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView_mediaAnno2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="#AFB42B"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:text="Media 10 giorni"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView_anno2" />

                        <TextView
                            android:id="@+id/textView_risMediaAnno2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="#AFB42B"
                            android:gravity="center"
                            android:text="566,54 pz\n~ 4 ct"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView_mediaAnno2" />

                        <TextView
                            android:id="@+id/textView_prezzoMedioAnno2"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#689F38"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:text="Prezzo medio: 0.99"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView_risMediaAnno2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/sh_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_close_24" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_1"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/choosetxt">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView_anno1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="#FBC02D"
                            android:gravity="center"
                            android:text="2021"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textView_mediaAnno1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="#AFB42B"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:text="Media 10 giorni"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView_anno1" />

                        <TextView
                            android:id="@+id/textView_risMediaAnno1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="#AFB42B"
                            android:gravity="center"
                            android:text="566,54 pz\n~ 4 ct"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView_mediaAnno1" />

                        <TextView
                            android:id="@+id/textView_prezzoMedioAnno1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="#689F38"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:text="Prezzo medio: 0.99"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView_risMediaAnno1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/choosetxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VENDITE IN PROMOZIONE"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cardView_2"
                    app:layout_constraintStart_toEndOf="@+id/cardView_1"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:srcCompat="@drawable/wholesale64" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_keyboard_double_arrow_up_24"
                    android:gravity="center_vertical"
                    android:text="12,64 %"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/cardView_2"
                    app:layout_constraintStart_toEndOf="@+id/cardView_1"
                    app:layout_constraintTop_toTopOf="@+id/cardView_1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>